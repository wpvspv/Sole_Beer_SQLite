<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_v2"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ID_Danger_Level"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/blood_level_0"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/ID_blood_FinalConcentration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="혈중알코올 : 몇%"
        android:textColor="#000000"
        android:textSize="10pt"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </LinearLayout>



    <TextView
        android:id="@+id/ID_Danger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="위험문구"
        android:textSize="9pt"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/ID_bloodreturn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="#FF6F61"
            android:background="@drawable/button_backgroud"
            android:text="돌아가기"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>