<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--주석 : 주량 측정 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blood_background_image"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </LinearLayout>
            <RadioGroup
                android:id="@+id/ID_blood_radiogroup"
                android:layout_width="130dp"
                android:layout_height="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/edittext_background_image"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <RadioButton
                    android:id="@+id/ID_blood_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자" />

                <RadioButton
                    android:id="@+id/ID_blood_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자" />
            </RadioGroup>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >
                <EditText
                    android:id="@+id/ID_blood_weight"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:hint="체중"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background_image"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="-11dp"
                    android:textSize="20dp"
                    android:text="kg"
                    android:gravity="right"
                    android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <EditText
                    android:id="@+id/ID_blood_volume"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:hint="음주량"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background_image"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginBottom="-11dp"
                    android:text="ml"
                    android:textSize="20dp"
                    android:gravity="right"
                    android:layout_weight="3"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <EditText
                    android:id="@+id/ID_blood_Concentration"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:hint="도수"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@drawable/edittext_background_image" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="right"
                    android:layout_weight="3"
                    android:text="%" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >


                <EditText
                    android:id="@+id/ID_blood_time"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="음주 후 경과"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/edittext_background_image" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:layout_weight="3"

                    android:text="시간" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >


                <Button
                    android:id="@+id/ID_blood_check"

                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:textColor="#FF6F61"
                    android:background="@drawable/button_backgroud"
                    android:text="혈중 알코올 검사"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1">

            </LinearLayout>
        
    </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

            </LinearLayout>

            <Button
                android:id="@+id/ID_Soju_1Bottle"

                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="#008000"
                android:background="@drawable/button_backgroud"
                android:text="소주 1병 추가"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/ID_Beer_500cc"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="#FF9900"
                android:background="@drawable/button_backgroud"
                android:layout_gravity="center"
                android:text="맥주 500 추가"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="참이슬-17%\n맥주 - 5%\n막걸리 - 6%"/>

        </LinearLayout>

        
    

    </LinearLayout>









</LinearLayout>